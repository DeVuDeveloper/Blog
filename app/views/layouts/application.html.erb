<!DOCTYPE html>
<html>
  <head>
    <%= stylesheet_link_tag 'https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css', media: 'all', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <title>Blog</title>
  </head>

  <body>

  <div class="login">
 <% if user_signed_in? %>
  <strong><%= current_user.name %></strong>
  <strong><%= current_user.email %></strong>
   <%= link_to 'All users', root_path %>
  <%= link_to 'Edit profile', edit_user_registration_path %> 
  <%= link_to "Logout", destroy_user_session_path, data: { turbo_method: :delete } %>
<% else %>
   <%= link_to 'All users', root_path %>
  <%= link_to "Sign up", new_user_registration_path %> 
  <%= link_to "Login", new_user_session_path %>
<% end %>

</div>
  <div>
  <% if notice %>
      <h6 class="alert alert-success text-center msg"><%= flash[:notice]%></h6>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger text-center msg"><%= alert %></p>
    <% end %>
    </div>
    <%= yield %>
  </body>
</html>
