<section class="all-posts">
  <%= render "users/user", user: @user %>
    <ul class="posts-wrapper" >
      <% @posts.each do |post| %>
        <li>
          <div class="post-container flex-one">
          <div class="single-post">  
            <%= link_to user_post_path(@user.id, post.id) do %>
            <h3 class="post-tittle"><%= post.title%></h3>
            <% end %>
            <p><%= post.text%></p>
          </div>
            
            <div class="counters">
              <span>Comments: <%= post.comments.size %></span>
              <span>Likes: <%= post.likes.size %></span>
              </div>
            </div>
            <ul class="recent-comments flex-one">
              <% post.most_recent_comments.each do |comment| %>
              <li><%= comment.author.name %>: <%= comment.text%></li>
              <% end %>
            </ul>
         </li>
      <% end %>
    </ul>
   <%= link_to "All Users", root_path, class: "all-users-link" %>
</section>

