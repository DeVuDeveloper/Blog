<%= form_with model:[@post, @post.comments.build], method: :post, local: true do |f| %>
  <div class="form-group">
    <%= f.label :text, "Comment:", class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_area :text, size: "50x5", :placeholder => "post here", required: true%>
    </div>
  </div>
  <%= f.submit "Submit", class: "btn-comment", data: {disable_with: "Loading..."} %>
<% end %>